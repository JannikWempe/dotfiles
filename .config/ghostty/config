# Cursor styling
cursor-style = "block"
cursor-style-blink = false

mouse-hide-while-typing = true

# Always save state (including tabs, splits etc.) on exit
window-save-state = always

# Slowdown mouse scrolling
mouse-scroll-multiplier = 0.95

# right option acts as alt -> needed for vim Meta key commands (e.g. <M-t>)
# left still acts as option -> needed for special characters (e.g. â€“ (Option+-))
macos-option-as-alt = right
